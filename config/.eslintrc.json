{
  "extends": [
    "react-app",
    "airbnb"
  ],
  "globals": {
    "assert": true,
    "jestExpect": true,
    "mount": true,
    "shallow": true,
    "spy": true,
    "stub": true,
    "useFakeTimers": true
  },
  "rules": {
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": [
          "Link"
        ],
        "specialLink": [
          "to",
          "hrefLeft",
          "hrefRight"
        ],
        "aspects": [
          "noHref",
          "invalidHref",
          "preferButton"
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": "*.test.js",
      "rules": {
        "no-unused-expressions": "off",
        "react/jsx-filename-extension": "off"
      }
    }
  ]
}
