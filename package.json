{
  "name": "web",
  "version": "0.1.0",
  "engines": {
    "node": "9.2.0"
  },
  "private": true,
  "homepage": "https://deafchi.github.io",
  "dependencies": {
    "auth0-js": "^9.0.2",
    "autoprefixer": "7.1.2",
    "bootstrap": "^4.0.0-beta.2",
    "chalk": "1.1.3",
    "dotenv": "4.0.0",
    "fs-extra": "3.0.1",
    "jest-enzyme": "^4.0.1",
    "jwt-decode": "^2.2.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.6",
    "promise": "8.0.1",
    "prop-types": "^15.6.0",
    "raf": "^3.4.0",
    "react": "^16.0.0",
    "react-dev-utils": "^4.1.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "whatwg-fetch": "2.0.3"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "coverage": "npm run test:jest -- --coverage && coveralls < coverage/lcov.info",
    "lint": "eslint ./src ./tests --ext js,jsx",
    "test": "node scripts/test.js --env=jsdom",
    "ci": "npm run lint && npm run test && codecov",
    "test:coverage": "npm run test -- --coverage",
    "deploy": "npm run build && gh-pages -d build",
    "postinstall": "npm run build"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/app.{js,jsx}",
      "src/{containers,components,layouts}/**/*.{js,jsx}",
      "src/redux/**/*.{js,jsx}"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/tests/setupTests.js",
      "jest-localstorage-mock"
    ],
    "testMatch": [
      "<rootDir>/(tests|src)/**/__tests__/**/*.js?(x)",
      "<rootDir>/(tests|src)/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "verbose": true
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb"
    ],
    "globals": {
      "shallow": true
    }
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^3.0.3",
    "babel-runtime": "^6.26.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "eslint": "^4.13.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.35.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^0.11.2",
    "gh-pages": "^1.0.0",
    "html-webpack-plugin": "^2.29.0",
    "jest": "^22.0.4",
    "jest-cli": "^22.0.4",
    "jest-localstorage-mock": "^2.1.0",
    "mocha": "^4.0.1",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.0.0",
    "redux-devtools": "^3.4.1",
    "sinon": "^4.2.2",
    "style-loader": "^0.18.2",
    "sw-precache-webpack-plugin": "^0.11.4",
    "url-loader": "^0.5.9",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "webpack-manifest-plugin": "^1.2.1"
  }
}
